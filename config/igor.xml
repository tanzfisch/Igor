<?xml version="1.0"?>
<Igor>
    <Config>
        <!-- loglevel: Assert, Error, Warning, Info, User (default), Debug, Trace -->
        <Setting name="logLevel" value="User" />

        <!-- min max threads default is min=1 max=Max -->
        <Setting name="minThreads" value="1" />
        <Setting name="maxThreads" value="Max" />
        
        <!-- min max for render context threads threads default is min=1 max=Max -->
        <Setting name="minRenderContextThreads" value="1" />
        <Setting name="maxRenderContextThreads" value="Max" />

        <!-- min max for physics threads threads default is min=1 max=Max -->
        <Setting name="minPhysicsThreads" value="1" />
        <Setting name="maxPhysicsThreads" value="Max" />

        <!-- loadMode: loade mode of resource manager App (application decides), Sync (all synchronous) -->
        <Setting name="loadMode" value="App" />

        <!-- searchPaths: search paths for resources relative to current directory. In this example relative to the bin folder -->
        <Setting name="searchPaths">
            <Value>../../data/textures</Value>
            <Value>../../data/sprites</Value>
            <Value>../../data/models</Value>
            <Value>../../data/materials</Value>
            <Value>../../data/animations</Value>
            <Value>../../data/sounds</Value>
            <Value>../../data</Value>
        </Setting>
    </Config>
</Igor>
