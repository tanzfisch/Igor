<?xml version="1.0"?>
<Igor>
    <Config>
        <!-- loglevel: Assert, Error, Warning, Info, User (default), Debug, Trace -->
        <Setting name="logLevel" value="Trace" />

        <!-- min max for threads
            Options are a numbers or "Max" which represents the host's max thread count
        -->        
        <Setting name="minRenderContextThreads" value="1" />
        <Setting name="maxRenderContextThreads" value="Max" />
        <Setting name="minPhysicsThreads" value="1" />
        <Setting name="maxPhysicsThreads" value="Max" />
        <!-- only usefull if there is no render context -->
        <Setting name="minThreads" value="0" />
        <Setting name="maxThreads" value="0" />

        <!-- loade mode of resource manager
             loadMode: App (application decides), Sync (all synchronous) -->
        <Setting name="loadMode" value="App" />

        <!-- searchPaths: search paths for resources relative to current directory. In this example relative to the bin folder -->
        <Setting name="searchPaths">
            <Value>../../data</Value>
            <!-- because I have no time to fix linux vs windows paths yet -->
            <Value>../data</Value>
            <Value>data</Value>            
        </Setting>
    </Config>
</Igor>
