<?xml version="1.0"?>
<Igor>
    <!-- loadMode: loade mode of resource manager App (application decides), Sync (all synchronous) -->
    <ResourceManager loadMode="App"> 

        <!-- all paths have to be relative to current directory when igor is executed -->
        <SearchPaths>
            <SearchPath>../../data/textures</SearchPath>
            <SearchPath>../../data/sprites</SearchPath>
            <SearchPath>../../data/models</SearchPath>
            <SearchPath>../../data/materials</SearchPath>
            <SearchPath>../../data/animations</SearchPath>
            <SearchPath>../../data/sounds</SearchPath>
            <SearchPath>../../data</SearchPath>
        </SearchPaths>
    </ResourceManager>

    <!-- available log levels: Assert, Error, Warning, Info, User (default), Debug, Trace -->
    <Logging>
        <LogLevel>User</LogLevel> 
    </Logging>
</Igor>
